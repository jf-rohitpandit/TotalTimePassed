<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Total Time Passed</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      height: 80vh;
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;
      overflow: hidden;
      background-color: wheat;
    }

    h1 {
      font-size: 5rem;
      margin: 0;
    }

    .style {
      height: 30%;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 2rem;
    }

    button {
      color: white;
      background-color: red;
      border: none;
      padding: 1rem;
      width: 15rem;
      margin: 0 auto;
      border-radius: 1rem;
      font-weight: 800;
    }

    .time {
      padding: 0;
      display: flex;
      justify-content: space-evenly;
      align-items: center;
    }
  </style>
</head>

<body>
  <div class="time">
    <div class="style">
      <h1> <span id="hours">0</span> Hour: <span id="mins">0</span> Mins</h1>
      <h3>Time passed in this Laps</h3>

    </div>
    <div class="style">
      <h1><span id="total-hours">{{totalTime.hours}}</span>Hour: <span id="total-mins">{{totalTime.mins}}</span>Mins
      </h1>
      <h3>Total time passed</h3>
    </div>
  </div>
  <div class="time">
    <form action="/stop" method="POST">
      <input type="text" name="hours" id="hours-value" value="" style="display:none;">
      <input type="text" name="mins" id="mins-value" value="" style="display: none;">
      <button>Stop Timer</button>
    </form>

    <form action="/reset" method="POST">
      <input type="text" name="hours" id="hours-value" value="" style="display:none;">
      <input type="text" name="mins" id="mins-value" value="" style="display: none;">
      <button>Reset Timer</button>
    </form>
  </div>

  <script>
    let hours = parseInt(document.getElementById('hours').innerText);
    let mins = parseInt(document.getElementById('mins').innerText);
    let totalHours = parseInt(document.getElementById('total-hours').innerText);
    let totalMins = parseInt(document.getElementById('total-mins').innerText);

    function increseMinunte() {

      mins += 1;
      totalMins += 1;
      if (mins > 60) {
        mins = parseInt(mins % 60);
        hours++;
      }
      if (totalMins > 60) {
        totalMins = parseInt(totalMins % 60);
        totalHours++;
      }
      document.getElementById('hours').innerText = hours;
      document.getElementById('mins').innerText = mins;
      document.getElementById('total-hours').innerText = totalHours;
      document.getElementById('total-mins').innerText = totalMins;
      console.log(document.getElementById('hours-value').value)
      console.log(document.getElementById('mins-value').value)
      document.getElementById('hours-value').value = totalHours;
      document.getElementById('mins-value').value = totalMins;
      console.log(mins)
      console.log(hours)
    }
    setInterval(increseMinunte, 60000);
  </script>

</body>

</html>